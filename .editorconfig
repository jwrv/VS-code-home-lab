# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown - preserve trailing whitespace (used for line breaks)
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# Python
[*.py]
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_size = 2

# Makefile - must use tabs
[Makefile]
indent_style = tab

[*.{mk,make}]
indent_style = tab

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# Terraform
[*.{tf,tfvars}]
indent_size = 2

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 2

# Jinja2
[*.{j2,jinja,jinja2}]
indent_size = 2

# Go
[*.go]
indent_style = tab
indent_size = 4
