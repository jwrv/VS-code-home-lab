{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,

  // STRICT CONFIGURATION - All rules enabled with proper standards

  // Line length - enforce 100 characters for readability
  "MD013": {
    "line_length": 100,
    "heading_line_length": 100,
    "code_block_line_length": 120,
    "code_blocks": true,
    "tables": false,
    "headings": true,
    "strict": false,
    "stern": false
  },

  // Inline HTML - only allow specific elements when necessary
  "MD033": {
    "allowed_elements": [
      "br",
      "img",
      "details",
      "summary",
      "kbd",
      "sub",
      "sup"
    ]
  },

  // First line should be a top-level heading (enforce good document structure)
  "MD041": {
    "level": 1
  },

  // No bare URLs - use link syntax [text](url)
  "MD034": true,

  // Enforce consistent list marker style
  "MD004": {
    "style": "dash"
  },

  // Enforce consistent emphasis style
  "MD049": {
    "style": "asterisk"
  },

  // Enforce consistent strong style
  "MD050": {
    "style": "asterisk"
  },

  // Enforce consistent code block style
  "MD046": {
    "style": "fenced"
  },

  // Duplicate headings allowed only at same level (sibling)
  "MD024": {
    "siblings_only": true
  },

  // Trailing spaces - allow 2 spaces for line breaks
  "MD009": {
    "br_spaces": 2,
    "list_item_empty_lines": false,
    "strict": false
  },

  // Maximum one consecutive blank line
  "MD012": {
    "maximum": 1
  },

  // Enforce ATX-style headings (#)
  "MD003": {
    "style": "atx"
  },

  // No trailing punctuation in headings
  "MD026": {
    "punctuation": ".,;:!?"
  },

  // Enforce ordered list item prefix
  "MD029": {
    "style": "ordered"
  },

  // Code blocks should have language specified
  "MD040": true,

  // Enforce proper heading increments
  "MD001": true,

  // Headings should be surrounded by blank lines
  "MD022": {
    "lines_above": 1,
    "lines_below": 1
  },

  // Lists should be surrounded by blank lines
  "MD032": true
}
