{
  // Editor Settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": true,
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.renderWhitespace": "boundary",
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // File Associations
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml",
    "*.tf": "terraform",
    "*.tfvars": "terraform",
    "*.hcl": "hcl",
    "*.j2": "jinja",
    "*.jinja": "jinja",
    "*.jinja2": "jinja",
    "Makefile*": "makefile",
    "*.bu": "yaml",
    "*.ign": "json",
    ".ansible-lint": "yaml",
    ".yamllint": "yaml",
    "*.service": "ini",
    "*.mount": "ini",
    "*.timer": "ini"
  },

  // Files to Exclude from Explorer
  "files.exclude": {
    "**/.git": true,
    "**/.terraform": true,
    "**/.terraform.lock.hcl": false,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/.DS_Store": true
  },

  // Search Exclusions
  "search.exclude": {
    "**/.git": true,
    "**/.terraform": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/venv": true
  },

  // Terraform Settings
  "terraform.languageServer.enable": true,
  "terraform.experimentalFeatures.validateOnSave": true,
  "terraform.experimentalFeatures.prefillRequiredFields": true,
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file"
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  },

  // Ansible Settings
  "ansible.ansible.path": "/usr/bin/ansible",
  "ansible.python.interpreterPath": "/usr/bin/python3",
  "ansible.validation.enabled": true,
  "ansible.validation.lint.enabled": true,
  "ansible.validation.lint.path": "/usr/local/bin/ansible-lint",
  "[ansible]": {
    "editor.defaultFormatter": "redhat.ansible",
    "editor.tabSize": 2
  },

  // YAML Settings
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.validate": true,
  "yaml.hover": true,
  "yaml.completion": true,
  "yaml.schemas": {
    "kubernetes": [
      "k8s/**/*.yaml",
      "k8s/**/*.yml",
      "kubernetes/**/*.yaml",
      "kubernetes/**/*.yml"
    ],
    "https://json.schemastore.org/ansible-stable-2.9": [
      "ansible/**/*.yml",
      "ansible/**/*.yaml"
    ],
    "https://json.schemastore.org/docker-compose.json": [
      "docker-compose*.yml",
      "docker-compose*.yaml",
      "compose/**/*.yml",
      "compose/**/*.yaml"
    ],
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ]
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced"
  },

  // Python Settings
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.mypyEnabled": true,
  "python.formatting.provider": "none",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.tabSize": 4
  },
  "isort.args": [
    "--profile",
    "black"
  ],
  "black-formatter.args": [
    "--line-length=120"
  ],

  // Shell Script Settings
  "shellcheck.enable": true,
  "shellcheck.run": "onSave",
  "shellformat.flag": "-i 2 -ci",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.tabSize": 2
  },

  // Docker Settings
  "docker.dockerComposeBuild": true,
  "docker.dockerComposeDetached": true,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // Kubernetes Settings
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "enabled",
    "vs-kubernetes.helm-path": "/usr/local/bin/helm",
    "vs-kubernetes.kubectl-path": "/usr/local/bin/kubectl",
    "vs-kubernetes.minikube-path": "minikube",
    "vs-kubernetes.draft-path": "draft",
    "vs-kubernetes.namespace": "default"
  },

  // Markdown Settings
  "markdown.preview.breaks": true,
  "markdown.preview.linkify": true,
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",  // Use prettier for formatting
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 100,
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": false  // Preserve trailing spaces for line breaks
  },
  "markdownlint.config": {
    "extends": ".markdownlint.json"
  },
  "markdownlint.run": "onSave",

  // JSON Settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // JavaScript/TypeScript Settings
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // Git Settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "none",
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": true
  },

  // Terminal Settings
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.env.linux": {
    "KUBECONFIG": "${workspaceFolder}/.kube/config"
  },

  // AI Assistant Settings
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": false,
    "markdown": true,
    "terraform": true,
    "python": true,
    "shellscript": true
  },
  "github.copilot.editor.enableAutoCompletions": true,

  // Code Spell Checker - Comprehensive homelab dictionary
  "cSpell.enabled": true,
  "cSpell.diagnosticLevel": "Warning",  // Show as warnings, not errors
  "cSpell.showStatus": true,
  "cSpell.maxNumberOfProblems": 100,
  "cSpell.minWordLength": 4,  // Ignore very short words

  // Custom dictionaries by file type
  "cSpell.languageSettings": [
    {
      "languageId": "markdown",
      "ignoreRegExpList": [
        "/```[\\s\\S]*?```/g",  // Ignore code blocks
        "/`[^`]*`/g",           // Ignore inline code
        "/\\[.*?\\]\\(.*?\\)/g" // Ignore links
      ]
    },
    {
      "languageId": "yaml,ansible",
      "ignoreRegExpList": [
        "/#.*$/gm",             // Ignore comments
        "/[a-z0-9-_]+:[a-z0-9-_]+/gi"  // Ignore key:value pairs
      ]
    }
  ],

  // Comprehensive homelab-specific word list
  "cSpell.words": [
    // Kubernetes & Orchestration
    "kubectl", "kubernetes", "k3s", "k8s", "kube", "kubeconfig", "kubelet",
    "kustomize", "kustomization", "argocd", "gitops", "cilium", "metallb",
    "longhorn", "traefik", "ingress", "egress", "kubeadm", "minikube",

    // Ansible & Configuration
    "ansible", "playbook", "playbooks", "jinja", "jinja2", "tfvars",
    "idempotent", "idempotency", "vars", "vaultwarden",

    // Terraform & IaC
    "terraform", "tfstate", "tfplan", "tfvars", "hashicorp", "proxmox",

    // Homelab Infrastructure
    "homelab", "homelabs", "selfhost", "selfhosted", "opnsense",
    "truenas", "unraid", "pfsense", "pihole",

    // Storage & Backup
    "longhorn", "rook", "ceph", "nfs", "iscsi", "minio", "s3",
    "restic", "duplicati", "borg", "borgbackup",

    // Networking
    "vlan", "vlans", "dhcp", "dns", "wireguard", "tailscale",
    "zerotier", "openvpn", "ipsec", "bgp", "ospf", "vxlan",

    // Monitoring & Observability
    "prometheus", "grafana", "loki", "alertmanager", "promtail",
    "telegraf", "influxdb", "victoriametrics", "thanos",
    "uptime", "kuma", "gotify", "ntfy", "healthchecks",

    // Databases
    "postgres", "postgresql", "mariadb", "mysql", "mongodb",
    "redis", "valkey", "etcd", "cockroachdb", "timescaledb",

    // Applications
    "nextcloud", "jellyfin", "plex", "emby", "frigate",
    "zigbee", "mqtt", "mosquitto", "nodered", "homeassistant",
    "adguard", "vaultwarden", "bitwarden", "gitea", "forgejo",
    "paperless", "ngx", "photoprism", "immich", "calibre",
    "sonarr", "radarr", "lidarr", "prowlarr", "bazarr",
    "tdarr", "handbrake", "ffmpeg",

    // Security & Auth
    "oauth", "oidc", "saml", "ldap", "keycloak", "authelia",
    "authentik", "cert", "acme", "letsencrypt", "certbot",
    "sso", "mfa", "totp", "fido", "yubikey",

    // Container & Virtualization
    "podman", "containerd", "crio", "qemu", "kvm", "libvirt",
    "virt", "vmware", "esxi", "vcenter", "hyperv", "hypervisor",

    // Cloud & APIs
    "cloudflare", "duckdns", "noip", "webhook", "webhooks",
    "api", "apis", "restful", "grpc", "graphql",

    // Tools & CLIs
    "helm", "helmfile", "kubectx", "kubens", "k9s", "lens",
    "krew", "flux", "fluxcd", "helmsman", "skaffold",
    "kubectl", "kustomize", "yamllint", "shellcheck", "hadolint",
    "trivy", "falco", "gitleaks", "precommit",

    // Programming & Config
    "yaml", "toml", "hcl", "jsonnet", "jsonpath", "jmespath",
    "regex", "envs", "confd", "templating", "dotenv",

    // File Systems & Protocols
    "cifs", "smb", "sshfs", "webdav", "rclone", "rsync",
    "syncthing", "fstab", "mountpoint",

    // Media & Smart Home
    "jellyseerr", "overseerr", "ombi", "requestrr",
    "tautulli", "varken", "organizr", "heimdall",
    "zwave", "zigbee2mqtt", "deconz", "esphome",

    // Misc Infrastructure
    "systemd", "cron", "logrotate", "syslog", "journald",
    "iptables", "nftables", "firewalld", "ufw", "selinux",
    "apparmor", "seccomp", "cgroup", "namespace",

    // Brand Names & Products
    "cloudnative", "linuxserver", "linuxserver.io",
    "ibracorp", "techno", "technotim", "unifi", "ubiquiti",
    "synology", "qnap", "asustor", "intel", "nuc",

    // Common Abbreviations
    "cidr", "fqdn", "tld", "ddns", "wol", "ipmi", "bmc",
    "raid", "zfs", "btrfs", "ext4", "xfs", "lvm",
    "acl", "rbac", "mtls", "pki", "san", "nas", "hba"
  ],

  // Files to ignore for spell checking
  "cSpell.ignorePaths": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.terraform/**",
    "**/dist/**",
    "**/build/**",
    "**/*.min.js",
    "**/*.min.css",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/.vscode/**"
  ],

  // Error Lens Settings
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],

  // Todo Tree Settings
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "NOTE",
    "HACK",
    "XXX",
    "BUG"
  ],
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text",
    "foreground": "#ffffff",
    "background": "#ffbd2e",
    "opacity": 50,
    "iconColour": "#ffbd2e"
  },

  // Remote Development
  "remote.SSH.remotePlatform": {
    "homelab-k3s-master": "linux",
    "homelab-k3s-node-1": "linux",
    "homelab-k3s-node-2": "linux",
    "homelab-k3s-node-3": "linux"
  },
  "remote.SSH.showLoginTerminal": true,
  "remote.SSH.useLocalServer": false,

  // Makefile Settings
  "makefile.extensionOutputFolder": "./.vscode",

  // Prettier Settings (comprehensive formatting)
  "prettier.enable": true,
  "prettier.requireConfig": true,  // Only format if .prettierrc exists
  "prettier.configPath": ".prettierrc.json",
  "prettier.tabWidth": 2,
  "prettier.singleQuote": false,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 100,
  "prettier.proseWrap": "preserve",
  "prettier.endOfLine": "lf",

  // EditorConfig
  "editorconfig.enable": true,

  // Continue.dev AI Assistant Settings
  "continue.telemetryEnabled": false,
  "continue.enableTabAutocomplete": true,

  // Security
  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "prompt",

  // Telemetry
  "telemetry.telemetryLevel": "off",

  // Workbench
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "readme",

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  // Path Intellisense
  "path-intellisense.mappings": {
    "/": "${workspaceFolder}"
  }
}
